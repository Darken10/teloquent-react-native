{
  "name": "teloquent-react-native",
  "version": "1.0.0",
  "description": "Un ORM TypeScript moderne pour React Native avec support SQLite (expo-sqlite, react-native-sqlite-storage)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docs": "typedoc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint"
  },
  "keywords": [
    "react-native",
    "sqlite",
    "orm",
    "typescript",
    "expo-sqlite",
    "database",
    "mobile"
  ],
  "author": "Darken10",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react-native": "^0.72.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "expo-sqlite": ">=11.0.0",
    "react-native-sqlite-storage": ">=6.0.0"
  },
  "peerDependenciesMeta": {
    "expo-sqlite": {
      "optional": true
    },
    "react-native-sqlite-storage": {
      "optional": true
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "docs/GUIDE.md"
  ],
  "dependencies": {
    "@types/pluralize": "^0.0.33",
    "pluralize": "^8.0.0"
  }
}
